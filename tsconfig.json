{
  "extends": "@leokun/typescript-esm",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "types/**/*",
      "packages/*/types/**/*",
      "node_modules/@types/**/*"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "tests"
  ],
}